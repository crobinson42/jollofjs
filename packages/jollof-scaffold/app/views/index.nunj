<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JollofJS</title>
    <link rel="stylesheet" href="/static/css/animate.css"/>
    <link rel="stylesheet" href="/static/css/home.css"/>
    <link rel="stylesheet" href="/static/css/login.css"/>
    <link rel="stylesheet" href="/static/css/toastr.min.css"/>
</head>
<body id="background">
<header>
    <div class="maincover">
        <div class="title">
            <span>Welcome to Jollof<span class="js">JS</span></span>
        </div>
        {% if user %}
            <div class="subtitle">
                <div class="col">

                    {% if user.isAdmin %}
                        <a href="/admin">
                            <div class="gobox animated bounceIn">
                                <img class="adminCog animated rotateIn" src="/jollofstatic/img/cog-256.png"
                                     width="60px"/>
                                <span class="adminLabel animated fadeInLeft">To the Admin</span>
                            </div>
                        </a>
                    {% else %}
                        You are logged In!
                    {% endif %}
                    <br/>
                    <a href="/logout">Logout</a>
                </div>
            </div>

        {% else %}
            <div class="login-page">

                <div class="form">
                    <div id="msg" style="color: orangered; padding:2px;"></div>
                    <form id="signupForm" class="register-form" >
                        <input type="hidden" name="_csrf" value="{{ csrf }}" />
                        <input name="firstName" type="text" placeholder="First"/>
                        <input name="lastName" type="text" placeholder="Last"/>
                        <input name="password" type="password" placeholder="password"/>
                        <input name="email" type="text" placeholder="email address"/>
                        <input type="submit" class="button" value="Sign Up"/>
                        <p class="message">Already registered? <a id="loginBtn" href="javascript:;">Log In</a></p>
                    </form>
                    <form id="loginform" class="login-form" >
                        <input type="hidden" name="_csrf" value="{{ csrf }}" />
                        <input name="username" type="text" placeholder="Email or Username"/>
                        <input name="password" type="password" placeholder="password"/>
                        <input type="submit" class='button' value="Login" />
                        <p class="message">Not registered? <a id="signupBtn" href="javascript:;">Sign Up</a></p>
                    </form>
                </div>
            </div>
        {% endif %}


    </div>

</header>

<script type="text/javascript" src="/static/js/jquery-3.1.1.min.js"></script>
<script src="/static/js/toastr.min.js"></script>
<script type="text/javascript">
    $('.message a').click(function () {
        $('form').animate({ height: "toggle", opacity: "toggle" }, "medium");
    });


    $('#loginform').on('submit',function(evt){
        evt.preventDefault();
        $('#loginBtn').prop('disabled', true);

        $.post('/login',$( this ).serialize(), function(data){
            $('#loginBtn').prop('disabled', false);

            if(data.success){
                location.href = '/';
            }
            else{
                toastr.warning(data.message);
                $('#msg').html(data.message);
            }
        }).fail(function(){
            toastr.warning('Unable to Login. Please try again later');
            $('#msg').html('Unable to Login. Please try again later');
        })
    });


</script>

</body>
</html>